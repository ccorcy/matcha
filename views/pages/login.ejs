<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <div class="row">
          <div class="col-3">
            <button class="btn btn-danger matcha_button" type="button" id="back-button" name="back">Back</button>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col">
            <h1>Sign In</h1>
          </div>
        </div>
        <div class="row">
          <div class="col">

          </div>
          <div class="col-8">
            <form class="form" id="login">
             <label for="inputEmail" class="sr-only">Email address</label>
             <div class="form-group" id="usrn">
               <input id="input-usr" type="text" class="form-control" name="usrn" placeholder="Username" required autofocus>
             </div>
             <div class="form-group" id="pwd">
               <label for="inputPassword" class="sr-only">Password</label>
               <input type="password" id="input-password" name="password" class="form-control" placeholder="Password" required>
               <input type="email" id="reset_mail" name="email" value="" class="form-control" placeholder="your email" style="display:none">
               <button class="btn matcha_button" type="button" name="button" id="reset" style="display:none">Password lost ? Reset it</button>
             </div>
             <button class="btn btn-success" id="log_button" type="submit">Sign in</button>
            </form>
          </div>
          <div class="col">

          </div>
        </div>
      </div>
    </div>
    <% include ../partials/footer %>
    <% include ../partials/login_script %>
    <script type="text/javascript">
      document.getElementById("back-button").addEventListener('click', (e) => {
        e.preventDefault()
        document.location.href = "/"
      }, false)
    </script>
  </body>
</html>
