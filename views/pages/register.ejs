<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <header>
            <% include ../partials/header %>
        </header>
        <div class="container" style="margin-top: 15px;">
            <div class="jumbotron">
                <div class="row">
                    <div class="col">
                        <h2>Register</h2>
                        <p class="lead">
                          Cr√©ez un compte pour rencontrer le partenaire qui te correspond vraiment !
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col">

                    </div>
                    <div class="col-8">
                        <form method="POST" action="/register.html" id="register">
                               <div class="form-group"  id="name">
                                <label class="form-control-label" for="name">Name</label>
                                <input id="name-input" name="name" type="text" class="form-control" placeholder="Enter your name">
                            </div>
                            <div class="form-group" id="surname">
                                <label class="form-control-label" for="surname">Surname</label>
                                <input id="input-surname" name="surname" type="text" class="form-control" placeholder="Enter your surname">
                            </div>
                            <div class="form-group" id="username">
                                <label class="form-control-label" for="username">Username</label>
                                <input id="username-input" name="username" type="text" class="form-control" placeholder="Enter a username">
                                <small class="form-text text-muted">Your username has to be unique</small>
                            </div>
                            <div class="form-group" id="email">
                                <label class="form-control-label" for="email">Email address</label>
                                <input id="input-email" name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group" id="password">
                                <label class="form-control-label" for="password">Password</label>
                                <input id="password-input" name="password" type="password" class="form-control" placeholder="Password">
                            </div>
                            <div class="form-group danger" id="vpassword">
                                <label class="form-control-label" for="vpassword">Verify Password</label>
                                <input id="input-vpassword" name="vpassword" type="password" class="form-control form-control-danger" placeholder="Password" id="vpassword_input">
                            </div>
                            <button id="submit" type="submit" class="btn btn-primary col-12">Register</button>
                        </form>
                    </div>
                    <div class="col">

                    </div>
                </div>
            </div>
        </div>
        <% include ../partials/footer %>
        <% include ../partials/login_script %>
        <script type="text/javascript">
                const xhr = new XMLHttpRequest();
                let submit = document.querySelector("#submit");
                let form = document.querySelector("#register");


                submit.addEventListener('click', (e) => {
                    e.preventDefault();
                    xhr.open("POST", "/register", true);
                    xhr.onload = () => {
                        if (xhr.readyState === 4 && xhr.status === 200) {
                            try {
                                let data = JSON.parse(xhr.responseText);
                                document.getElementById("name").className += " has-success";
                                document.getElementById("surname").className += " has-success";
                                document.getElementById("name-input").className += " form-control-success";
                                document.getElementById("input-surname").className += " form-control-success";
                                if (data.password_different === true) {
                                    document.getElementById("vpassword").className += " has-error";
                                    document.getElementById("input-vpassword").className += " form-control-danger";
                                } else {
                                    document.getElementById("vpassword").className += " has-success";
                                    document.getElementById("input-vpassword").className += " form-control-success";
                                }
                                if (data.email === true) {
                                    document.getElementById("email").className += " has-danger";
                                    document.getElementById("input-email").className += " form-control-danger";
                                } else {
                                    document.getElementById("email").className += " has-success";
                                    document.getElementById("input-email").className += " form-control-success";
                                }
                                if (data.password === true) {
                                    document.getElementById("password").className += " has-danger";
                                    document.getElementById("password-input").className += " form-control-danger";
                                } else {
                                    document.getElementById("password").className += " has-success";
                                    document.getElementById("password-input").className += " form-control-success";
                                }
                                if (data.username === true) {
                                    document.getElementById("username").className += " has-danger";
                                    document.getElementById("username-input").className += " form-control-danger";
                                } else {
                                    document.getElementById("username").className += " has-success";
                                    document.getElementById("username-input").className += " form-control-success";
                                }
                            } catch(e) {
                                console.log(e);
                            }
                        }
                    };
                    xhr.send(new FormData(form));
                }, false);
        </script>
    </body>
</html>
