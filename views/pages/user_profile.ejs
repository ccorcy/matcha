<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header_log %>
    </header>
    <div class="container" style="margin-top: 15px">
      <div class="jumbotron">
        <div class="card text-center">
          <h3 class="card-header"><%= user.username %></h3>
          <div class="card-block">
            <div class="row">
              <div class="col-3" style="min-width: 250px; margin-bottom: 15px;">
                <div style="background-color: rgba(0,0,0,0)">
                  <img src="<%= user.pics %>" alt="pp" class="rounded mx-auto d-block like" style="width:200px; height: 200px">
                </div>
              </div>
              <div class="col">

              </div>
            </div>
            <div class="row">
              <div class="col" style="border: 2px dashed #FF5F6D; margin-left: 15px; margin-right: 15px; padding:10px;">
                <h3 style="color: #FF5F6D"><%= user.name %> <%= user.surname %></h3>
                <small class="text-muted"><%= user.age %> years old</small><br>
                Gender: <% if (user.gender === "male") { %>&#9794;<% } %>
                        <% if (user.gender === "female") { %>&#9792;<% } %>
                        <% if (user.gender === "other") { %>&#9906;<% } %>
                <div class="row">
                  <div class="col">
                    <center>
                      <p class="lead" style="text-align:center;word-wrap: break-word; max-width: 400px; max-height: 100px; overflow:auto; font-size: 14px"><%= user.bio %></p>
                    </center>
                  </div>
                </div>
                <h5>My sphere of interests</h5>
                <span style="color: rgb(240, 90, 90); font-decoration: underline">
                  <% for (var i = 0; i < user.interest.length; i++) { %>
                    #<%= user.interest[i] %> <% if (user.interest[i + 1] != undefined) { %>, <% } %>
                  <% } %>
                </span>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-4 col-12">
                <button class="btn btn-danger matcha_button" type="button" id="back-button" name="back">Back</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% include ../partials/footer %>
    <% include ../partials/ws %>
    <script type="text/javascript">
      document.getElementById("back-button").addEventListener('click', () => {
        history.go(-1)
      }, false)
      ws.onopen = () => {
        ws.send(JSON.stringify({ sender: '<%= sess.username %>', receiver: '<%= user.username %>', msg: "visite"}))
      }
    </script>
  </body>
</html>
